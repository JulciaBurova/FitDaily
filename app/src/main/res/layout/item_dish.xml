<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/tvDishItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/ivDishEdit"
        app:layout_constraintEnd_toStartOf="@+id/tvDishItemCal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDishItemCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#616161"
        app:layout_constraintBottom_toBottomOf="@+id/ivDishEdit"
        app:layout_constraintEnd_toStartOf="@+id/ivDishEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDishDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_delete_24" />

    <ImageView
        android:id="@+id/ivDishEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivDishDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_edit_24" />
</androidx.constraintlayout.widget.ConstraintLayout>